<!DOCTYPE html>
<html style="font-size:17px">

<head>





    <!-- Our Custom CSS -->
    <!-- CSS only -->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" rel="stylesheet" />
    <link href="~/css/BarraLateral.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href='https://fonts.googleapis.com/css?family=Bungee Shade' rel='stylesheet'>
    <link href="~/css/titulos.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Fredoka One' rel='stylesheet'>
    <link href="~/css/Nuevanav.css" rel="stylesheet" />



</head>

<body>

    <!-- header -->

    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <div class="row">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">

                    <span class="fs-4" style="font-family: Bungee Shade;color: darkorange">WeCommerce</span>
                </a>
                <span class="navbar-brand mb-0 h1" style="font-family:Fredoka One">AdminPanel</span>

            </div>
            <div class="top_bar_content ml-auto">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>


    <!-- /Header -->
    <!-- Main -->
    <div class="container-fluid">
        <div class="row">

            <div class="d-flex flex-column p-3 text-white bg-dark" style="width: 280px;height:2000px">
               
               
                <ul class="nav nav-pills flex-column mb-auto">
                    <li class="nav-item" >
                        <a asp-controller="Products" asp-action="Index" class="nav-link text-white" id="aProductos">
                            <i class="bi bi-laptop"></i><use xlink:href="#home"></use>
                            Productos
                        </a>
                        <hr style="height:1px;width:200px;margin-top:5px;margin-bottom:5px;background-color:white">
                    </li>

                    <li class="nav-item">
                        <a asp-controller="Categories" asp-action="Index" class="nav-link text-white" id="aCategorias">
                            <i class="bi bi-menu-app-fill"></i><use xlink:href="#speedometer2"></use>
                            Categorias
                        </a>
                        <hr style="height:1px;width:auto;margin-top:5px;margin-bottom:5px;background-color:white">
                    </li>
                    <li class="nav-item">
                        <a asp-controller="VentaCabeceras" asp-action="Index" class="nav-link text-white" id="aVentas">
                            <i class="bi bi-receipt"></i><use xlink:href="#table"></use>
                            Ventas
                        </a>
                        <hr style="height:1px;width:auto;margin-top:5px;margin-bottom:5px;background-color:white">
                    </li>
                    <li class="nav-item ">
                        <a asp-controller="Marcas" asp-action="Index" class="nav-link text-white " id="aMarcas">
                            <i class="bi bi-tags"></i><use xlink:href="#grid"></use>
                            Marcas
                        </a>
                        <hr style="height:1px;width:auto;margin-top:5px;margin-bottom:5px;background-color:white">
                    </li>

                </ul>

            </div>
            <!-- /col-3 -->
            <div class="col-sm-9">
                <div class="row" style="margin-left:10px">
                    <!-- center left-->
                    <main role="main" class="pb-3" style="margin-bottom: 100px">
                        @RenderBody()
                    </main>


                </div>
                <!--/row-->


            </div>
            <!--/col-span-9-->
        </div>
    </div>
    <!-- /Main -->



    <div class="modal" id="addWidgetModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">Add Widget</h4>
                </div>
                <div class="modal-body">
                    <p>Add a widget stuff here..</p>
                </div>
                <div class="modal-footer">
                    <a href="#" data-dismiss="modal" class="btn">Close</a>
                    <a href="#" class="btn btn-primary">Save changes</a>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dalog -->
    </div>
    <!-- /.modal -->


    <script href="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
    <script href="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/esm/popper.js"></script>
    <script href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/js/bootstrap.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/sidebars.js"></script>
    @section Script{




    }

    
    @RenderSection("Scripts", required: false)
</body>


</html>
