<div class="container mt-5 mb-5">
    <div class="row g-2">
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card p-2" style="border-color:#ff8c00">
                <div class="text-center"> <img src="@("/Files/Img/Product/"+Model.ToArray()[0].ImageName)" class="img-fluid" width="200" /> </div>
                <div class="content">
                    <div class="d-flex justify-content-between align-items-center"> <p>@Model.ToArray()[0].Title</p> <span class="price">$@Model.ToArray()[0].Price</span> </div>
                    
                    <div class="buttons d-flex justify-content-center"> <button class="btn btn btn-outline-warning mr-1" onclick="GoDetails(@Model.ToArray()[0].Id)" >Ver</button> <button class="btn btn-warning" onclick="addProduct(@Model.ToArray()[0].Id)">Agg al Carro</button> </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card p-2" style="border-color:#ff8c00">
                <div class="text-center"> <img src="@("/Files/Img/Product/"+Model.ToArray()[1].ImageName)" class="img-fluid" width="200" /> </div>
                <div class="content">
                    <div class="d-flex justify-content-between align-items-center"> <p>@Model.ToArray()[1].Title</p> <span class="price">$@Model.ToArray()[1].Price</span> </div>
                    
                    <div class="buttons d-flex justify-content-center"> <button class="btn btn btn-outline-warning mr-1" onclick="GoDetails(@Model.ToArray()[1].Id)">Ver</button> <button class="btn btn-warning" onclick="addProduct(@Model.ToArray()[1].Id)">Agg al Carro</button> </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            <div class="card p-2" style="border-color:#ff8c00">
                <div class="text-center"> <img src="@("/Files/Img/Product/"+Model.ToArray()[2].ImageName)" class="img-fluid" width="200" /> </div>
                <div class="content">
                    <div class="d-flex justify-content-between align-items-center"> <p>@Model.ToArray()[2].Title</p> <span class="price">$@Model.ToArray()[2].Price</span> </div>
                    
                    <div class="buttons d-flex justify-content-center"> <button class="btn btn btn-outline-warning mr-1" onclick="GoDetails(@Model.ToArray()[2].Id)">Ver</button> <button class="btn btn-warning" onclick="addProduct(@Model.ToArray()[1].Id)">Agg al Carro</button> </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    function GoDetails(id) {

        $.ajax({

            url: "/ProductosVistaController1/Details",
            data: { id: id },
            type: "post",
            cache: false,

            success: function () {
                window.location = "/ProductosVistaController1/Details/" + id;

            },
            error: function (error) {


                console.log(error);
            }
        });
    }

    function addProduct(id) {
        var cantidad = 1;
        $.ajax({

            url: "/VentaCabeceras/AddProdCarrito",
            data: {
                IdProduct: id,
                cantidad: cantidad

            },
            type: "post",
            cache: false,

            success: function () {
                GetTotalCarrito();

            },
            error: function (error) {


                console.log(error);
            }
        });
    }

    $(document).ready(function () {

        $('#myCarousel').carousel({
            interval: 3000,
        })

    });


</script>