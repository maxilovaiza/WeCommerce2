@model WeCommerce.Models.VentaCabecera
@{
    Layout = null;

}
<link href='https://fonts.googleapis.com/css?family=Bungee Shade' rel='stylesheet'>
<link href="~/css/titulos.css" rel="stylesheet" />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
<div class="container" style="margin-bottom:20px">
    <a href="#" style="font-family: Bungee Shade;color:black;font-size:50px">WeCommer</a>
</div>
<div style="margin-right:0;margin-left: 0;text-align:center;margin-top:10px;background-color:#212529;margin-bottom:10px">
    <h3 class="titles-text" style="padding: 5px; font-family: Bungee Shade; color: darkorange;font-size:20px">Detalles de una Venta</h3>
</div>
<hr />

<div style="margin-bottom:50px">
    @foreach (var itemModel in Model.Details)
    {

        <div class="row">
            <span class="col-2" style="font-weight:800">

                Fecha de Compra:
            </span>
            @Html.DisplayFor(model => model.Date)
        </div>

        <div class="row">
            <span class="col-2" style="font-weight:800">

                Nombre:
            </span>
            @Html.DisplayFor(item => itemModel.getUsuario().Nombre)
        </div>
        <div class="row">
            <span class="col-2" style="font-weight:800">

                Apellido:
            </span>
            @Html.DisplayFor(item => itemModel.getUsuario().Apellido)
        </div>
        <div class="row">
            <span class="col-3" style="font-weight:800">

                Localidad:
            </span>
            @Html.DisplayFor(item => itemModel.getUsuario().Localidad)
        </div>
        <div class="row">
            <span class="col-2" style="font-weight:800">

                Calle:
            </span>
            @Html.DisplayFor(item => itemModel.getUsuario().Calle)
        </div>
        <div class="row">
            <span class="col-3" style="font-weight:800">

                Numero de Telefono:
            </span>
            @Html.DisplayFor(item => itemModel.getUsuario().PhoneNumber)
        </div>
        <div class="row">
            <span class="col-3" style="font-weight:800">

                Mail:
            </span>
            @Html.DisplayFor(item => itemModel.getUsuario().Email)
        </div>
        break;
    }
</div>
<hr />
<table class="table-responsive table table-bordered border-secondary">
    <thead class="text-light bg-dark">
        <tr>
            <td>
                Producto
            </td>
            <td>
                Cantidad
            </td>
            <td>
                Precio
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var itemModel2 in Model.Details)
        {
            <tr>
                <td>
                    @Html.DisplayFor(item => itemModel2.getProductos().Title)
                </td>
                <td>
                    @Html.DisplayFor(item => itemModel2.Quntity)
                </td>
                <td>
                    $@Html.DisplayFor(item => itemModel2.Price)
                </td>
            </tr>
}
        <tr class="bg-secondary text-light ">


            <td colspan="2" class="table-active">Total</td>
            <td class="text-light">
                $@Html.DisplayFor(model => model.totalventa)
            </td>
        </tr>
    </tbody>
</table>

