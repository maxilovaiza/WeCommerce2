@model WeCommerce.Models.VentaCabecera

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutOtros";
}

<div class="titles">
    <h3 class="titles-text">Detalles de una Venta</h3>
</div>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdUser)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <td>

                @Html.DisplayNameFor(model => model.Details.FirstOrDefault().ProductId)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Details.FirstOrDefault().Quntity)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Details.FirstOrDefault().Price)
            </td>
            <td>
                Total
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var itemModel in Model.Details)
        {
            <tr>

                <td>
                    @Html.DisplayFor(item => itemModel.getProductos().Title)
                </td>
                <td>
                    @Html.DisplayFor(item => itemModel.Quntity)
                </td>
                <td>
                    @Html.DisplayFor(item => itemModel.Price)
                </td>
                <td>
                    @*@Html.DisplayFor(item => itemModel.)*@
                </td>
            </tr>


        }
        <tr>

            <td>
            </td>
            <td>
            </td>
            <td>
                Total
            </td>
            <td>
                $ @ViewBag.TotalVentas
            </td>
        </tr>

    </tbody>


</table>
@*<div class="col-12">
        <p class=" align-self-center"></p>
    </div>*@

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver a la Lista</a>
</div>