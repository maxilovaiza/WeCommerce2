@model IEnumerable<WeCommerce.Models.VentaCabecera>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutOtros";
}

<div class="titles">
    <h3 class="titles-text">Ventas</h3>
</div>

<table class="table ">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUser)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUser)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="color:black"><i class="bi bi-pencil"></i> Editar</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" style="color:black"><i class="bi bi-card-list"></i> Detalles</a>
            </td>
            <td>


                <a asp-action="Delete" asp-route-id="@item.Id" style="color:red"><i class="bi bi-trash" style="color:red"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
