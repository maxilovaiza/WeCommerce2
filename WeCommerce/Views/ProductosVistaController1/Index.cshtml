@model IEnumerable<WeCommerce.Models.Product>


@{
    ViewData["Title"] = "Index";

}
<head>

    <link href="https://fonts.googleapis.com/css2?family=Merienda&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/productos.css" rel="stylesheet" />
    <link href="~/css/filter.css" rel="stylesheet" />
    <link href="~/css/Accordion.css" rel="stylesheet" />
    <link href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link href='https://use.fontawesome.com/releases/v5.7.2/css/all.css'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link href="~/css/titulos.css" rel="stylesheet" />

    <script src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <link href="~/css/cardresponsive.css" rel="stylesheet" />
    <script src="~/js/filtros.js"></script>

    <link href="~/icofont/icofont.min.css" rel="stylesheet" />


</head>

<body>
    <div class="col-12 " style="margin-top:20px">
        <div class="row">
            <div class="col-3 " style="visibility:hidden">
                <a>aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</a>
            </div>
            <div class="contenedor col-7">
                <div class="titlesUser">
                    <h3 class="titles-text-user">Productos Destacados</h3>
                </div>
                <img src="https://compragamer.net/categorias_demo/defaultAngular.jpg" class="img-fluid" style="width:auto" />


            </div>

        </div>


    </div>

    <div class="col-12 " style="margin-top:10px">
        <div class="row" >
            <div class="col-3">
                <div class="titlesUser">
                    <h3 class="titles-text-user">Categorias</h3>
                </div>
                <div class="containeraccordion">
                    <ul id="accordion" class="accordion" style="cursor:pointer">
                        <li>
                            <div class="link" onclick="TodosLosProductos()"><i class="icofont-listing-box"></i>Todos los productos</div>
                           
                        </li>
                        <li>
                            <div class="link"><i class="icofont-micro-chip"></i></i>Procesadores<i class="fa fa-chevron-down"></i></div>
                            <ul class="submenu">
                                <li><a class="text-light" onclick="BuscarCategoria(4,1)">AMD</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(4,2)">Intel</a></li>

                            </ul>
                        </li>
                        <li>
                            <div class="link"><i class="bi bi-play-btn"></i>Placas De Video<i class="fa fa-chevron-down"></i></div>
                            <ul class="submenu">
                                <li><a class="text-light" onclick="BuscarCategoria(3,1)">AMD</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(3,6)">Geforce</a></li>

                            </ul>
                        </li>
                        <li>
                            <div class="link"><i class="icofont-monitor"></i>Monitores<i class="fa fa-chevron-down"></i></div>
                            <ul class="submenu">
                                <li><a class="text-light" onclick="BuscarCategoria(5,7)">Samsung</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(5,4)">Asus</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(5,8)">Lg</a></li>
                            </ul>
                        </li>
                        <li>
                            <div class="link"><i class="icofont-keyboard-alt"></i>Teclados<i class="fa fa-chevron-down"></i></div>
                            <ul class="submenu">
                                <li><a class="text-light" onclick="BuscarCategoria(7,9)">Hyperex</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(7,10)">Reddragon</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(7,11)">Razer</a></li>
                            </ul>
                        </li>
                        <li>
                            <div class="link"><i class="icofont-mouse"></i>Mouse<i class="fa fa-chevron-down"></i></div>
                            <ul class="submenu">
                                <li><a class="text-light" onclick="BuscarCategoria(6,9)">Hyperex</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(6,10)">Reddragon</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(6,11)">Razer</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(6,12)">Logitech</a></li>
                            </ul>
                        </li>
                        <li>
                            <div class="link"><i class="icofont-headphone-alt-3"></i>Auriculares<i class="fa fa-chevron-down"></i></div>
                            <ul class="submenu">
                                <li><a class="text-light" onclick="BuscarCategoria(8,9)">Hyperex</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(8,10)">Reddragon</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(8,11)">Razer</a></li>
                                <li><a class="text-light" onclick="BuscarCategoria(8,12)">Logitech</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>


            </div>
            <div class="col-md-7 " id="text" style="margin:0">
                @foreach (var item in Model)
                {

                    <div class="card card-body" style="margin-top:5px">
                        <div class="media align-items-center align-items-lg-start text-center text-lg-left flex-column flex-lg-row">
                            <div class="mr-2 mb-3 mb-lg-0">  <img class="img-fluid" src="@("/Files/Img/Product/"+item.ImageName)" asp-append-version="true" width="150" height="150" /> </div>
                            <div class="media-body">
                                <h6 class="media-title font-weight-semibold"><a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a> </h6>


                                <p class="mb-3" id="description">@Html.DisplayFor(modelItem => item.Description) </p>

                            </div>
                            <div class="mt-3 mt-lg-0 ml-lg-3 text-center">
                                <h3 class="mb-0 font-weight-semibold" id="precios">$@Html.DisplayFor(modelItem => item.Price)</h3>

                                <button type="button" class="btn btn-warning mt-4 text-white" onclick="addProduct(@item.Id)"><i class="icon-cart-add mr-2"></i> Agregar al carro</button>
                            </div>
                        </div>
                    </div>
                }


            </div>

        </div>
    </div>




</body>

<script>

    function addProduct(id) {
        var cantidad = 1;
        $.ajax({

            url: "/VentaCabeceras/AddProdCarrito",
            data: {
                IdProduct: id,
                cantidad: cantidad
            },
            type: "post",
            cache: false,

            success: function () {

                GetTotalCarrito();

            },
            error: function (error) {


                console.log(error);
            }
        });
    }


  



</script>
