@page
@model LoginModel


@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Wecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Merienda&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/Nav2.css" rel="stylesheet" />
    <link href="~/css/footer.css" rel="stylesheet" />
    <link href="~/css/loginnuevo.css" rel="stylesheet" />
</head>

<body class="body">

    

    <div style="margin-bottom:100px">
        <div class="container px-4 py-5 mx-auto">

            <div class="card card0">
                <div class="d-flex flex-lg-row flex-column-reverse">
                    <div class="card card1">
                        <div class="row justify-content-center my-auto">
                            <div class="col-md-8 col-10 my-5">
                                <div class="row justify-content-center px-3 mb-3"> <img id="logo" src="https://www.flaticon.com/premium-icon/icons/svg/3624/3624762.svg"> </div>
                                <h3 class="mb-5 text-center heading">We are Commerce</h3>
                                <h6 class="msg-info">Porfavor ingrese sesion con su cuenta</h6>
                                <section id="section">
                                    <form id="account" method="post" class="center">

                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Input.Email" class="form-control-label text-muted"></label>
                                            <input asp-for="Input.Email" class="form-control text-dark" id="email" placeholder="Email" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.Password" class="form-control-label text-muted"></label>
                                            <input asp-for="Input.Password" class="form-control text-dark" id="psw" placeholder="Contraseña" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="row justify-content-center my-3 px-3">
                                            <div class="checkbox">
                                                <label asp-for="Input.RememberMe">
                                                    <input asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center my-3 px-3">
                                            <button type="submit" class="btn-block btn-color">Log in</button>
                                        </div>
                                        <div class="row justify-content-center my-2"> <a id="forgot-password" asp-page="./ForgotPassword"><small class="text-muted">Olvidaste tu contraseña?</small></a> </div>


                                    </form>
                                </section>
                                <div class="bottom text-center mb-5">
                                    <p href="#" class="sm-text mx-auto mb-3">No tienes cuenta?<button class="btn btn-white ml-2" ><a class="text-dark" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a></button></p>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="card card2">
                        <div class="my-auto mx-md-5 px-md-5 right">
                            <h3 class="text-white">Somos más que una empresa</h3> <small class="text-white">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</small>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <footer class="border-top footer text-muted" style="background-color:white">
        <div class="container">
            &copy; 2021 - Wecommerce - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js">
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>


<link href="~/css/login1.css" rel="stylesheet" />






@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
